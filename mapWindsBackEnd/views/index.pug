doctype html
html
  head
    title Wind Map
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://unpkg.com/leaflet@1.9.4/dist/leaflet.js', integrity='sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=', crossorigin='')
    link(rel='stylesheet', href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css', integrity='sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=', crossorigin='')
    script(src='https://code.jquery.com/jquery-3.6.4.min.js')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

  body
    .heading-container
      h1#title Map Winds
      h3#profile
    script(src='https://cdn.auth0.com/js/auth0-spa-js/2.0/auth0-spa-js.production.js')
    script(src='https://unpkg.com/leaflet.vectorgrid@latest/dist/Leaflet.VectorGrid.bundled.js')
    script(src='leaflet.geometryutil.js')

    .page-container
      #route
      .section-container
        section.map-section
          #map        

            #loadingIndicator.loading
        section#part
          p.smallHeading Select co-ordinates on the map to get real-time data and plan your route
          button#login Log in
          button#logout Log out
          #mytext
            table(style='width: 100%')
              tr
                th(style='width: 52%') Position
                th(style='width: 24%') Wind speed (knots)
                th(style='width: 24%') Wind direction (degrees)
              table#selected(style='width: 100%')
        .play-container
          .play-section
            input.date(type='range', id='dateslider', min='0', max='6', step='1', value='0')
            .loader-container
              #loader.loader
            button#play
              img(src='/images/play.png')
          p.date
            | Selected Date:
            span#selectedDate
      script(src='/javascripts/script.js')

